#include <stdio.h>
#include <stdbool.h>
#include <string.h>

void sort(int list[], int n){
  int i=0, target_i=0;
  for(i=0; i<n; i++){
    target_i = i;
    for(int j=i; j<n; j++){
      if(list[j]<list[i])
        target_i=j;
    }
    int temp = list[target_i];
    list[target_i] = list [i];
    list[i] = temp;
  }
}

int main() {
  printf("Enter a number to append to the number set. Enter \"\\\" to stop appending.\n");

  char c[256] = {0};
  int list[256] = {0}, i=0, n=0;

  do{
    scanf("%s", c);

    int x=0, dec=0;
    for(int i=(strlen(c)-1),p=0; i>=0; i--,p++){
      x = c[i]-'0';
      for(int j=p; j>0; j--){
        x = x*10;
      }
      dec = dec+x;
    }

    list[i] = dec;
    if(c[0] !='/')  i++;

  }while(c[0] !='/');
  int mode[256]={0};
  float mean=0, median=0, total=0;
  n = i;
  sort(list,n);

  for(int j=0; j<n; j++){
    total = total + list[j];
  }
  mean = total/(n);

  int mc=0, k=0, nom=0;
  for(; k<n ; k++){
    int c=0;
    for(int i=0; i<n ; i++){
      if(list[k] == list[i]) ++c;
    }
    if(c==mc){
      bool repeat = false;
      for(int i=0; i<nom; i++){
        if (mode[i]==list[k]) repeat = true;
      }
      if(repeat == false){
        mode[nom] = list[k];
        ++nom;
      }
    }
    else if(c>mc){
      mc=c; nom=1;
      mode[0]= list[k];
    }
  }

  if(n%2 == 1)
    median=list[(n-1)/2];
  else{
    float a=list[n/2-1],b=list[n/2];
    median= (a+b)/2;
  }

  printf("Mean = %g\n", mean);
  printf("Mode = ");
  for(int i=0; i<nom; i++){
    if((i+1)==nom)
      printf("%d\n",mode[i]);
    else
      printf("%d, ",mode[i]);
  }
  printf("Median = %g", median);
  return 0;
}
